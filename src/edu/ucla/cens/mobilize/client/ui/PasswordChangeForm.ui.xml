<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	  .buttonPanel {
	  	background-color: #EEE;
	  	border-top: solid thin #CCC;
	  	padding: 1px;
	  	text-align: right;
	  }
		.container {
		}
	  .data {
    }
    .formContainer {
    	padding: 5px;
    }
    .header {
    	font-weight: bold;
    }
	  .label {
      font-weight: bold;
    }
		.row {
    }
	</ui:style>
	<g:HTMLPanel addStyleNames='{style.container}'>
	  <g:HTMLPanel addStyleNames='{style.formContainer}'>
		  <g:HTMLPanel addStyleNames='{style.row}'>
		    <g:Label addStyleNames='{style.label}'>Your password:</g:Label>
		    <g:PasswordTextBox ui:field='adminPasswordTextBox' />
		  </g:HTMLPanel>
	    <g:HTMLPanel addStyleNames='{style.row}'>
	      <g:HTMLPanel addStyleNames='{style.label}'>New password for
	        <g:InlineLabel ui:field='username' />:
	      </g:HTMLPanel>
	      <g:TextBox ui:field='newPasswordTextBox' />
	    </g:HTMLPanel>
    </g:HTMLPanel>
    <g:HTMLPanel addStyleNames='{style.buttonPanel}'>
      <g:Button ui:field='changePasswordButton'>Change Password</g:Button>
      <g:Button ui:field='cancelButton'>Cancel</g:Button>
    </g:HTMLPanel>
  </g:HTMLPanel>	  
</ui:UiBinder> 