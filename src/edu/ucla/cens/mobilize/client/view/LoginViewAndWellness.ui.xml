<ui:UiBinder
  xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">
  
  <ui:style>
    body {
    	min-width: 800px;
    	padding: 10px 20px;
    }
    .buttonDiv {
    	padding: 5px 5px 0px 0px;
    	text-align: right;
    }
    .description {
    	background: white;
    	font-size: 11pt;
    	margin: 0px 50px 10px 40px;
    	padding: 10px 20px;
    	white-space: normal;
    }
    .footer {
    	color: #888;
    	padding-top: 5px;
    }
    .footerCopyright {
    	padding-right: 10px;
    }
    .footerSpan {
    	padding: 2px;
    }
    .label {
      display: inline-block;
      padding: 5px;
      width: 50px;
    }
    .linkList {
    	list-style-type: none; /* use images for bullets instead */
    	padding: 0px;
    }
    .linkList li {
    	background-image: url('images/bullet_black.png');
    	background-position: 2px 50%;
    	background-repeat: no-repeat;
    	padding: 2px 20px;
    }
    .linkListDiv {
    	padding-left: 15px;
    }
    .loginForm {
    	display: inline-block;
    	vertical-align: middle;
    	margin: 40px auto;
    }
    .loginFormInnerContainer {
    	/*background-color: #DEEBF9;*/
    	background-color: #EEE;
    	border: solid 1px #CCC;
    	margin: auto;
    	padding: 10px 10px 5px 10px;
    	width: 250px;
     }
     .logoPanel {
       background-image: url('images/apple_andwellness.png');
       background-repeat: no-repeat;
       background-position: 0px 60%;
       display: inline-block;
       width: 100%;
       height: 100%;
     }
     .mainPanel { 
     	 height: 150px;
     	 margin: 0px auto 0px auto;
       white-space: nowrap; 
       width: 90%;
     }    
     .textBox {
     	width: 175px;
     }
     .left, .right {
       display: inline-block;
       height: 140px;
       vertical-align: middle;
     }
     .left {
       min-width: 500px;
       width: 60%;
     }
     .right {
       text-align: right;
       width: 40%;
     }
     .leftBottom {
     	border-top: solid thin #CCC;
     	border-bottom: solid thin #CCC;
     	width: 100%;
     }

  </ui:style>

  <g:HTMLPanel addStyleNames='{style.mainPanel}'>
<!--
    <g:HTMLPanel addStyleNames='{style.left}'>
		  <g:HTMLPanel tag='span' ui:field='logoPanel' addStyleNames='{style.logoPanel}' />
	  </g:HTMLPanel>
	  
	  <g:HTMLPanel addStyleNames='{style.right}'>
			<g:FormPanel addStyleNames='{style.loginForm}'>
			  <g:FlowPanel addStyleNames='{style.loginFormInnerContainer}'>
			    <g:HTMLPanel>
					  <g:InlineLabel addStyleNames='{style.label}'>User:</g:InlineLabel>
					  <g:TextBox ui:field='userNameTextBox' addStyleNames='{style.textBox}'/>
				  </g:HTMLPanel>
				  <g:HTMLPanel>
					  <g:InlineLabel addStyleNames='{style.label}'>Password:</g:InlineLabel>
					  <g:PasswordTextBox ui:field='passwordTextBox' addStyleNames='{style.textBox}' />
				  </g:HTMLPanel>
				  <g:HTMLPanel addStyleNames='{style.buttonDiv}'>
				    <g:SubmitButton ui:field='loginButton'>Login</g:SubmitButton>
				  </g:HTMLPanel>
			  </g:FlowPanel>
			</g:FormPanel>
			
		</g:HTMLPanel>
		<div class='floatstop' />
		-->
		<g:HTMLPanel>
		  <g:HTMLPanel addStyleNames='{style.left}'>
		    <g:HTMLPanel tag='span' ui:field='logoPanel' addStyleNames='{style.logoPanel}' />
		  </g:HTMLPanel>
		  <g:HTMLPanel addStyleNames='{style.right}'>
	      <g:FormPanel addStyleNames='{style.loginForm}'>
	        <g:FlowPanel addStyleNames='{style.loginFormInnerContainer}'>
	          <g:HTMLPanel>
	            <g:InlineLabel addStyleNames='{style.label}'>User:</g:InlineLabel>
	            <g:TextBox ui:field='userNameTextBox' addStyleNames='{style.textBox}'/>
	          </g:HTMLPanel>
	          <g:HTMLPanel>
	            <g:InlineLabel addStyleNames='{style.label}'>Password:</g:InlineLabel>
	            <g:PasswordTextBox ui:field='passwordTextBox' addStyleNames='{style.textBox}' />
	          </g:HTMLPanel>
	          <g:HTMLPanel addStyleNames='{style.buttonDiv}'>
	            <g:SubmitButton ui:field='loginButton'>Login</g:SubmitButton>
	          </g:HTMLPanel>
	        </g:FlowPanel>
	      </g:FormPanel>
		  </g:HTMLPanel>
		</g:HTMLPanel>
	
		<g:HTMLPanel addStyleNames='{style.leftBottom}'>
	    <g:HTMLPanel ui:field='descriptionPanel' addStyleNames='{style.description}'>
	    <h2>What is AndWellness?</h2> 
          <p>AndWellness is an open source web based application with a companion Android mobile phone application to collect, manage, and 
          visualize personal data.  Users can participate by downloading our free Android application and logging into any campaign of
          which they are a member.  The mobile application will automatically download relevant campaign configuration information to seamlessly begin querying the
          user and uploading data wirelessly and securely.  The server exposes the data in our defined generic data format which can be pushed
          into pre-existing visualization software, or used with a few example visualizations that are a part of AndWellness.</p> 
      </g:HTMLPanel>
    </g:HTMLPanel>
    
    <g:HTMLPanel addStyleNames='{style.footer}'>
      <span>Question? Comment? Problem? Email us at andwellness-info@cens.ucla.edu.</span> 
      <span class="float-right">Powered by ohmage</span>
    </g:HTMLPanel>
  </g:HTMLPanel>
  

</ui:UiBinder>
