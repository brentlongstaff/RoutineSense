  <target name="hosted" depends="devmode" description="Run development mode (NOTE: the 'hosted' target is deprecated)" />

  <target name="build" depends="gwtc" description="Build this project" />

  <target name="war" depends="build" description="Create a war file">
    <zip destfile="RoutineSense.war" basedir="war"/>
  </target>

  <target name="clean" description="Cleans this project">
    <delete dir="war/WEB-INF/classes" failonerror="false" />
    <delete dir="war/routinesense" failonerror="false" />
  </target>

 
  <target name="default" depends="buildwar,buildwar-nossl"></target>
 
  <target name="buildwar">
    <war basedir="war" destfile="RoutineSense.war" webxml="war/WEB-INF/web-remote.xml">
      <exclude name="WEB-INF/**" />
      <webinf dir="war/WEB-INF/">
        <include name="**/*.jar" />
      	<exclude name="web-remote-nossl.xml" />
      	<exclude name="web.xml" />
      </webinf>
    </war>
  </target>
	
  <target name="buildwar-nossl" description="build for josh's tomcat server">
  	<war basedir="war" destfile="RoutineSense-nossl.war" webxml="war/WEB-INF/web-remote-nossl.xml">
  		<exclude name="WEB-INF/**" />
      <webinf dir="war/WEB-INF/">
      	<include name="**/*.jar" />
        <exclude name="web.xml"/>
      	<exclude name="web-remote.xml"/>
      </webinf>
    </war>
   </target>

  <target name="deploy">
    <copy file="RoutineSense.war" todir="./ssl" />
  </target>
 
</project>
